general {
        interval = 1
        output_format = "none"
		separator = "     "
}

order += "cpu_usage"
order += "volume master"
order += "tztime berlin"


cpu_usage {
    format = " %usage"	
}

tztime berlin {
        #format = "%H:%M:%S  %Y-%m-%d  "
        format = "%d. %b %H:%M   "
        timezone = "Europe/Berlin"
}

volume master {
        format = " %volume"
        format_muted = " (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
