general {
        interval = 2
        output_format = "none"
		separator = "     "
}

order += "cpu_usage"
order += "volume master"
order += "tztime berlin"


cpu_usage {
    format = " %usage"	
}

tztime berlin {
        format = "%-d. %b %H:%M   "
        timezone = "Europe/Berlin"
}

volume master {
        format = "墳 %volume"
        format_muted = " (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
